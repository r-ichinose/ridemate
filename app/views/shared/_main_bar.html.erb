<div class="main-bar-area">
  <h1>ボード一覧</h1>
  <div class="rooms">
    <% if @boards.present? %>
      <% @boards.each do |board| %>
        <div class="room">
          <p><strong>モデル名:</strong> <%= board.model %></p>
          <p><strong>メーカー:</strong> <%= board.brand %></p>
          <p><strong>状態:</strong> <%= board.condition_id %></p>
          <p><strong>スタイル:</strong> <%= board.style_id %></p>
          <p><strong>購入日:</strong> <%= board.purchase.strftime('%Y年%m月%d日') if board.purchase %></p>
          <p><strong>長さ:</strong> <%= board.length %> cm</p>
          <p><strong>値段:</strong> ¥<%= number_with_delimiter(board.price) %></p>
          <%= link_to "詳細を見る", board_path(board), class: "button" %>
        </div>
      <% end %>
    <% else %>
      <p>登録されたボードがありません。</p>
    <% end %>
  </div>
</div>